<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>BeanBinaryConvertLib</PackageId>
    <Version>1.0.0</Version>
    <Authors>Venus</Authors>
    <Description>A library to convert between bean and binary.</Description>
    <PackageTags>binary;bean;convert</PackageTags>
    <RepositoryUrl>https://github.com/MornVenus/BeanBinaryConvertLib</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <AssemblyName>BeanBinaryConvertLib</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
